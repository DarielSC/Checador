<Window x:Class="chk.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chk"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Usuario:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,30,0,0"/>
        <TextBox Name="txtUsuario" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,30,0,0" Width="150"/>

        <TextBlock Text="Contraseña:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0"/>
        <PasswordBox Name="txtContrasena" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,70,0,0" Width="150"/>

        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,126,0,0" Width="80" Click="BtnLogin_Click"/>
    </Grid>
</Window>
