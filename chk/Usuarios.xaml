<Window x:Class="chk.Usuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:chk"
      mc:Ignorable="d" 
      Title="Registro de Usuarios" Height="720" Width="1000" Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <DataGrid ItemsSource="{Binding}" x:Name="dgUsuarios" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"  d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1" Margin="3,10,0,50" HorizontalAlignment="Left" Width="552" SelectionChanged="dgUsuarios_SelectionChanged">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}"/>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Visibility="Hidden"/>
                <DataGridTextColumn Header="Matricula" Binding="{Binding Matricula}"/>
                <DataGridTextColumn Header="Rol" Binding="{Binding Rol}"/>
                <DataGridTextColumn Header="FechaRegistro" Binding="{Binding FechaRegistro}"/>
                <DataGridTextColumn Header="Contrasena" Binding="{Binding Contrasena}"/>
            </DataGrid.Columns>

        </DataGrid>
        <TextBox x:Name="tbUsuario" Grid.Column="1" HorizontalAlignment="Left" Margin="576,41,0,0" TextWrapping="Wrap" Text="Matricula" VerticalAlignment="Top" Width="198" Height="38"/>
        <PasswordBox x:Name="tbContrasena" Grid.Column="1" HorizontalAlignment="Left" Margin="576,136,0,0" VerticalAlignment="Top" Width="190" Height="35"/>
        <Label Grid.Column="1" Content="Contraseña:" HorizontalAlignment="Left" Margin="576,107,0,0" VerticalAlignment="Top" Width="99"/>
        <ComboBox x:Name="cbRol" Grid.Column="1" HorizontalAlignment="Left" Margin="576,230,0,0" VerticalAlignment="Top" Width="190" Height="37">
            <ComboBoxItem Content="admin"/>
            <ComboBoxItem Content="mod"/>
        </ComboBox>
        <Button x:Name="btnRegistar" Grid.Column="1" Content="Registrar Usuario" HorizontalAlignment="Left" Margin="600,392,0,0" VerticalAlignment="Top" Click="btnRegistar_Click" Width="150" Height="35"/>
        <Button x:Name="btnSeleccionar" Grid.Column="1" Content="Seleccionar Rol" HorizontalAlignment="Left" Margin="598,0,0,0" VerticalAlignment="Center" Height="36" RenderTransformOrigin="0.5,0.5" Width="149" Click="btnSeleccionar_Click"/>
        <Label Grid.Column="1" Content="Rol" HorizontalAlignment="Left" Margin="576,201,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
