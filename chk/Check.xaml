<Window x:Class="chk.Check"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chk"
        mc:Ignorable="d"
        Title="Check" Height="700" Width="1000" Closed="Window_Closed" Loaded="Window_Loaded" > 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" x:Name="ImgPerfil" HorizontalAlignment="Left" Height="383" Margin="200,10,0,0" VerticalAlignment="Top" Width="383"/>
        <Label Content="Nombre" FontSize="30" x:Name="lblNombre" Grid.Column="1" HorizontalAlignment="Left" Margin="245,441,0,0" VerticalAlignment="Top"/>
        <Label Content="Apellido" FontSize="30" x:Name="lblApellido" Grid.Column="1" Margin="249,493,421,0" VerticalAlignment="Top"/>

        <Label Content="" x:Name="lblStatus" Height="53" Margin="10,0,465,10" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Label Content="" x:Name="lblReport" Height="53" Margin="465,0,10,10" VerticalAlignment="Bottom" Grid.Column="1" Grid.ColumnSpan="2" />
        
        
    </Grid>
</Window>
